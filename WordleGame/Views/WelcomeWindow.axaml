<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="650"
        x:Class="WordleGame.WelcomeWindow"
        Title="Welcome" Height="650" Width="500" Background="#394b41">

	<Window.Styles>
		<Style Selector="TextBlock.Anime">
			<Style.Animations>
				<Animation Duration="0:0:1">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
			<Style Selector="TextBlock.Anime1">
				<Style.Animations>
					<Animation Duration="0:0:1.5">
						<KeyFrame Cue="0%">
							<Setter Property="Opacity" Value="1"/>
						</KeyFrame>
						<KeyFrame Cue="50%">
							<Setter Property="Opacity" Value="0"/>
						</KeyFrame>
						<KeyFrame Cue="100%">
							<Setter Property="Opacity" Value="1"/>
						</KeyFrame>
					</Animation>
				</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime2">
			<Style.Animations>
				<Animation Duration="0:0:2">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime3">
			<Style.Animations>
				<Animation Duration="0:0:2.5">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime4">
			<Style.Animations>
				<Animation Duration="0:0:3">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime5">
			<Style.Animations>
				<Animation Duration="0:0:3.5">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime6">
			<Style.Animations>
				<Animation Duration="0:0:4">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime7">
			<Style.Animations>
				<Animation Duration="0:0:4.5">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="TextBlock.Anime8">
			<Style.Animations>
				<Animation Duration="0:0:5">
					<KeyFrame Cue="0%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Opacity" Value="0"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Opacity" Value="1"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="Button.Start">
			<Setter Property="Background" Value="#00cd8a"/>
			<Setter Property="Width" Value="190"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Padding" Value="31 12 0 0"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="{StaticResource PressStart}"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="CornerRadius" Value="15"/>
			<Setter Property="BorderBrush" Value="White"/>
			<Setter Property="BorderThickness" Value="5"/>
		</Style>
		<Style Selector="Button:pointerover /template/ ContentPresenter">
			<Setter Property="Background" Value="#00a465"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>
		<Style Selector="Button:pressed/template/ ContentPresenter">
			<Setter Property="Background" Value="#007c42"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style Selector="Button.Close">
			<Setter Property="Background" Value="#00cd8a"/>
			<Setter Property="Width" Value="170"/>
			<Setter Property="Height" Value="50"/>
			<Setter Property="Padding" Value="28 12 0 0"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontFamily" Value="{StaticResource PressStart}"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="CornerRadius" Value="15"/>
			<Setter Property="BorderBrush" Value="White"/>
			<Setter Property="BorderThickness" Value="5"/>
		</Style>
		<Style Selector="RadioButton">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="RadioButton">
						<Grid>
							<Border Width="70" Height="50"
                                    CornerRadius="17"
                                    Background="#00cd8a"
                                    BorderBrush="White"
                                    BorderThickness="5">
								<Border Width="72" Height="52"
                                        CornerRadius="20"
                                        Background="#007c42"
										IsVisible="{TemplateBinding IsChecked}" />
							</Border>
							<TextBlock Text="{TemplateBinding Content}"
									   FontFamily="{StaticResource PressStart}"
                                       FontSize="23"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="White" />
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Styles>
	<Grid>
		<Border>
			<Border.Background>
				<ImageBrush Source="\Assets\background4.jpg" Stretch="UniformToFill"/>
			</Border.Background>
			<Border.Effect>
				<BlurEffect Radius="3" />
			</Border.Effect>
		</Border>
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBlock Classes="Anime" Text="W" FontSize="40"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800">

			</TextBlock>
			<TextBlock Classes="Anime1" Text="o" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime2" Text="r" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime3" Text="d" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime4" Text="G" FontSize="40"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime5" Text="u" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime6" Text="e" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime7" Text="s" FontSize="35"
					   FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
			<TextBlock Classes="Anime8" Text="s" FontSize="35"
					  FontFamily="{StaticResource PressStart}"
					   Foreground="White" FontWeight="800"/>
		</StackPanel>
		<Panel Height="100" />
		<TextBlock Text="Выберите длину слова"
				   HorizontalAlignment="Center"
                   FontFamily="{StaticResource PressStart}"
                   Foreground="White"
                   FontSize="18"
                   Margin="0 30 0 25"/>
		<WrapPanel HorizontalAlignment="Center">
			<RadioButton Content="4"
                         Click="Set4LetterMode" Margin="0 0 20 0"/>
			<RadioButton Content="5"
                         Click="Set5LetterMode" Margin="10 0 15 0"/>
			<RadioButton Content="6"
                         Click="Set6LetterMode" Margin="10 0 0 0"/>
		</WrapPanel>
		<Panel Height="50" />
		<Button Classes="Start" Content="Начать" 
				Click="ToMainWindow" HorizontalAlignment="Center"/>
		<Button Classes="Close" Content="Выйти" Click="OnClose"
		HorizontalAlignment="Center"
		Margin="0 10 0 0"></Button>
	</StackPanel>
	</Grid>
</Window>
